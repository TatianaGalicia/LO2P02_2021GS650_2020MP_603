@{
    <h1>Creacion de Usuarios</h1>
    <h2>Ingrese los datos solicitados</h2>
    <br />
    <form asp-action="CrearEquipos">
    @*Inicio del Formulario*@

        <div class="form-group row mb-4">
            @*Label y input de Nombre de Usuario*@
            <div class="col-sm-2">
                <label>Nombre</label>
            </Div>
            <div class="col-sm-4">
                @Html.TextBox("nombre","",new {@class="form-control"})
            </Div>
            
            @*Label y input de Apellido del Usuario*@
            <div class="col-sm-2">
                <label>Apellido</label>
            </Div>
            <div class="col-sm-4">
                @Html.TextBox("apellido","",new {@class="form-control"})
            </Div>
                        @*Label y input de Email del Usuario*@
            <div class="col-sm-2">
                <label>Apellido</label>
            </Div>
            <div class="col-sm-4">
                @Html.TextBox("email","",new {@class="form-control"})
            </Div>

                        @*Label y input de Direccion del Usuario*@
            <div class="col-sm-2">
                <label>Apellido</label>
            </Div>
            <div class="col-sm-4">
                @Html.TextBox("direccion","",new {@class="form-control"})
            </Div>
            @*Label y input de Departamento de Usuario*@
            <div class="col-sm-2 mb-3">
                @Html.Label("lblDepartamento","Departamento")
            </Div>
            <div class="col-sm-4 mb-3">
                @Html.DropDownList("id", ViewData["listadoDeDepartamentos"] as SelectList, "Seleccione una departamento", new {@class = "form-control"})
            </Div>
            @*Label y input de Puesto de Usuario*@
            <div class="col-sm-2 mb-3">
                @Html.Label("lblPuesto","Puesto")
            </Div>
            <div class="col-sm-4 mb-3">
                @Html.DropDownList("id", ViewData["listadoDeDepartamentos"] as SelectList, "Seleccione un puesto", new {@class = "form-control"})
            </Div>

            <div class="form-group row mb-4">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    <input type="checkbox" id="estado" name="estado" value="true">
                    <label class="form-check-label">
                        Inactivo
                    </label>
                </div>
            </Div>

            <div class="form-group row mb-4">
                <div class="col-sm-2"></div>
                <div class="col-sm-4">
                    <input type="submit" class="btn btn-primary" value="Guardar"/>
                </div>
            </Div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Email</th>
                        <th>Direccion</th>
                         <th>Departamento</th>
                        <th>Genero</th>
                        <th>Puesto</th>

                    </tr>
                </thead>
                 <tbody>
                    @foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoUsuarios"])
                    {
                        <tr>
                            <td>@.id</td>
                            <td>@clientes.descripcion</td>
                            <td>@clientes.</td>
                            <td> <a asp-action="Eliminar" asp-route-id="@equipo.id_equipo">Eliminar</a></td>
                        </tr>
                    }
                </tbody>


           </form>

}
